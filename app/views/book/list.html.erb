
<link data-require="bootstrap-css@3.3.7" data-semver="3.2.0" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.css"/>



<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the current books in our system</p>
 
   <table class="table - bordered">
       <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Operations</th>
    </tr>
  </thead>
    <tbody>

  
   <% @books.each do |c| %>
  <tr>
   <td><%= link_to c.title, {:action => 'show', :id => c.id} %></td>
   <td> <%= link_to 'Show', {:action => 'show', :id => c.id}, class: 'btn btn-info btn-xs' %></td>
   <td><%= link_to 'Edit', {:action => 'edit', :id => c.id},class: 'btn btn-primary btn-xs' %></td>
   <td><%= link_to "Delete", {:action => 'delete', :id => c.id},class: 'btn btn-warning btn-xs',:confirm => "Are you sure you want to delete this item?" %></td>
   <tr>
   <% end %>
    
   </tbody>

     </table>
 <% end %>
  
<p><%= link_to "Add new Book", {:action => 'new' },class: 'btn btn-success'%></p>
  